{
  "extends": ["../../../tsconfig.json", "expo/tsconfig.base"],
  "compilerOptions": {
    "checkJs": true,
    "allowJs": true,
    "strict": true,
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["./*"],
      "@vibespot/validation": ["../../../packages/validation/src/index.ts"],
      "@vibespot/database": ["../../../packages/database/src/index.ts"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts",
    "assets/types/**/*.d.ts"
  ],
  "exclude": ["node_modules"]
}
