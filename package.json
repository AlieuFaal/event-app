{
  "name": "vibespot-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "apps/mobile/*",
    "packages/*"
  ],
  "scripts": {
    "build": "bun run --filter=event-app build",
    "dev": "bun run --filter=event-app dev",
    "build:web": "cd apps/web && bun run build:vercel",
    "dev:web": "cd apps/web && bun run dev",
    "start": "expo start",
    "dev-expo": "expo start --dev-client",
    "reset-project": "node ./scripts/reset-project.js",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "lint": "expo lint"
  },
  "devDependencies": {
    "@tanstack/eslint-plugin-query": "^5.91.2",
    "tailwindcss": "3.4.18"
  },
  "packageManager": "bun@1.3.2",
  "version": "1.0.0",
  "dependencies": {
    "expo": "~54.0.22",
    "lightningcss-darwin-x64": "^1.30.2",
    "react": "19.1.0",
    "react-native": "0.81.5"
  }
}
